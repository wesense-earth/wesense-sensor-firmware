#ifndef CREDENTIALS_H
#define CREDENTIALS_H

// === Node Identity ===
#define NODE_PREFIX "MyHome"              // Shared prefix for all your devices (e.g., "Smith", "Home", or "" for none)
#define NODE_LOCATION "LivingRoom"        // Unique per device (e.g., "Garage", "Bedroom2", "Outdoor")

// === WiFi ===
#define WIFI_SSID "YOUR_WIFI_SSID"
#define WIFI_PASSWORD "YOUR_WIFI_PASSWORD"

// === MQTT ===
#define MQTT_SERVER "mqtt.wesense.earth"
#define MQTT_PORT 1883
#define MQTT_USER "mqttuser"
#define MQTT_PASSWORD "YOUR_MQTT_PASSWORD"

// === LoRaWAN TTN Credentials (MSB format) ===
// Get these from The Things Network Console
// APPEUI is usually all zeros for TTN
#define LORAWAN_APPEUI { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 }
#define LORAWAN_DEVEUI { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 }
#define LORAWAN_APPKEY { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 }

// === Fixed Location (for stationary deployments without GPS) ===
// Set all to 0.0 to disable fixed location and rely on GPS only
#define FIXED_LAT 0.0
#define FIXED_LON 0.0
#define FIXED_ALT 0.0

// === Timezone ===
#define GMT_OFFSET_SEC 0          // Your timezone offset from UTC in seconds (e.g., 43200 for GMT+12)
#define DAYLIGHT_OFFSET_SEC 0     // DST offset in seconds (3600 if DST applies, 0 otherwise)

// === Remote Access ===
#define TELNET_PASS "CHANGE_THIS_PASSWORD"
#define TELNET_ALLOWED_IP ""      // Restrict to specific IP, or empty for any

// === Syslog (optional) ===
#define SYSLOG_HOST "192.168.1.1"
#define SYSLOG_UDP_PORT 514

#endif // CREDENTIALS_H
